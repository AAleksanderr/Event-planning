@page
@model EventPlanning.Pages.SuperUserModel
@{
	ViewData["Title"] = "SuperUser";
}

<h1>Users</h1>
<div>
	<form asp-page-handler="AddEvent" method="post">
		<table class="table">
			<thead>
			<tr>
			<th>
				@Html.DisplayNameFor(model => model.EditedUsers[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EditedUsers[0].EmailConfirmed)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EditedUsers[0].IsAdmin)
			</th>
			</thead>
			<tbody>
			@for (var i = 0; i < Model.EditedUsers.Count; i++)
			{
				<tr>
					<td>
						<div class="form-group">
							<input asp-for="EditedUsers[i].Name" class="form-control"/>
						</div>
					</td>
					<td>
						<div class="form-group">
							<input asp-for="EditedUsers[i].EmailConfirmed" class="form-control"/>
						</div>
					</td>
					<td>
						<div class="form-group">
							<input asp-for="EditedUsers[i].IsAdmin" class="form-control"/>
						</div>
					</td>
				</tr>
			}
			</tbody>
		</table>
		<input type="submit" class="btn btn-primary" value="Submit"/>
	</form>
</div>
